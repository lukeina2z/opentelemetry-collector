    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch otel-col",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "console": "integratedTerminal",
            "asRoot": false,
            "stopOnEntry": false,
            // "buildFlags": "-mod=mod",
            "linux": {
                // "program": "${workspaceFolder}/build/xray/xray"
            },
            "osx": {
                "program": "${workspaceFolder}/bin/otelcorecol_darwin_arm64-dbg",
            },
            "windows": {
                "program": "${workspaceFolder}/bin/otelcorecol_windows_amd64-dbg.exe",
                // "args": [
                //     "--config",
                //     "${workspaceFolder}/zconfig.yaml"
                // ],
                // "substitutePath": [
                //     {
                //         "from": "${workspaceFolder}/cmd/otelcorecol",
                //         "to": "go.opentelemetry.io/collector/cmd/otelcorecol"
                //     },
                //     {
                //         "from": "${workspaceFolder}/otelcol",
                //         "to": "go.opentelemetry.io/collector/otelcol"
                //     },
                // ]
            },
            "args": [
                "--config",
                "${workspaceFolder}/zconfig.yaml"
            ],
            "env": {
                "AWS_REGION": "us-west-2",
            },
            "dlvFlags": [
                // "--check-go-version=false",
                // "--headless=true",
                // "--log=true",
                // "--log-dest=6",
                // "--listen=:2345",
                // "--api-version=2"
            ],
            "substitutePath": [
                {
                    "from": "${workspaceFolder}/cmd/otelcorecol",
                    "to": "${workspaceFolder}/cmd/otelcorecol"
                },
                {
                    "from": "${workspaceFolder}/otelcol",
                    "to": "${workspaceFolder}/otelcol"
                }
            ]
        },
        {
            // sudo /home/ab/go/bin/dlv attach 26788 --headless --listen=:2345 --api-version=2 --accept-multiclient
            "name": "remote dlv server",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "debugAdapter": "dlv-dap",
            "remotePath": "${workspaceFolder}/build/xray/xray",
            "cwd": "${workspaceFolder}",
            "port": 2345,
            "host": "localhost",
            "apiVersion": 2,
            "substitutePath": [],
            "showLog": true
        }
    ]
}